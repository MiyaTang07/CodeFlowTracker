{
  "name": "codeflowtracker",
  "displayName": "CodeFlowTracker",
  "description": "Analyze coding habits and enhance developer productivity.",
  "version": "0.0.1",
  "publisher": "tangjiao094",
  "engines": {
    "vscode": "^1.93.1"
  },
  "icon": "./icon.jpg",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeflowtracker.showDailyReport",
        "title": "显示每日生产力报告"
      },
      {
        "command": "codeflowtracker.showWeeklyReport",
        "title": "显示最近7日生产力报告"
      }
    ],
    "configuration": {
      "properties": {
        "codeflowtracker.operations": {
          "type": "number",
          "default": 50,
          "description": "高效时段操作次数的判断最低值"
        },
        "codeflowtracker.switches": {
          "type": "number",
          "default": 5,
          "description": "高效时段切换次数的判断最高值"
        },
        "codeflowtracker.enableSmartReminder": {
          "type": "boolean",
          "default": true,
          "description": "智能提醒开关配置"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "eslint": "^9.9.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
